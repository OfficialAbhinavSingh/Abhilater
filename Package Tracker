                setTimeout(() => {
                    const mockData = {
                        status: 'In Transit',
                        location: 'Distribution Center, Mumbai',
                        estimatedDelivery: '2024-01-15',
                        updates: [
                            { timestamp: '2024-01-10 10:30', status: 'Package picked up' },
                            { timestamp: '2024-01-10 14:45', status: 'Arrived at sorting facility' },
                            { timestamp: '2024-01-11 09:15', status: 'Out for delivery' }
                        ]
                    };
                    
                    trackingDetails.innerHTML = `
                        <p><strong>Status:</strong> ${mockData.status}</p>
                        <p><strong>Current Location:</strong> ${mockData.location}</p>
                        <p><strong>Estimated Delivery:</strong> ${mockData.estimatedDelivery}</p>
                        <h4>Recent Updates:</h4>
                        <ul>
                            ${mockData.updates.map(update => `
                                <li>${update.timestamp} - ${update.status}</li>
                            `).join('')}
                        </ul>
                    `;
                    
                    trackingResults.classList.add('visible');
                    
                    // Scroll to results
                    trackingResults.scrollIntoView({ behavior: 'smooth' });
                }, 1000);
            }
        });

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add some interactive animations
        document.addEventListener('DOMContentLoaded', function() {
            const serviceCards = document.querySelectorAll('.service-card');
            serviceCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>

